<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogs</title>
    <link rel="stylesheet" href="/css/styles.css" />

    <!-- Import Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Header -->
    <div class="header">
      <h1 class="text-title">My<span class="text-blue">Blog</span></h1>
      <h2 class="text-title-smaller">Read your latest blogs</h2>
    </div>

    <!-- Create blog -->
    <% if (locals.create) { %> <%- include('partials/create.ejs') %> <% } %>

    <!-- Blog posts -->
    <% if (locals.blogPosts && locals.blogPosts.length > 0) { %>
    <form action="/create" method="get">
      <button class="background-blue text-button" type="submit">Create blog</button>
    </form>

    <%- include('partials/blog-posts.ejs') %> <% } else if (locals.update) { %>
    <!-- Update blog -->
    <%- include('partials/update.ejs') %> <% } else if (locals.delete) { %>

    <!-- Delete blog -->
    <%- include('partials/delete.ejs') %> <% } else if (!locals.create){ %> <%-
    include('partials/no-blogs.ejs') %> <% } %>
  </body>
</html>
