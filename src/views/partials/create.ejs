<form class="create-blog" action="/create/submit" method="post">
  <div class="input-slug-container">
    <label class="text-slug text-blue" for="slug">Slug:</label>
    <input
      class="input-slug text-slug text-blue"
      type="text"
      name="slug"
      id="slug"
      placeholder="Enter_a_unique_slug..."
      required
    />
  </div>

  <div class="input-title-container">
    <label class="text-title text-white" for="title">Title:</label>
    <input
      class="input-title text-title text-soft-white"
      type="text"
      name="title"
      id="title"
      placeholder="Enter blog Title..."
      required
    />
  </div>

  <div class="input-content-container">
    <label class="text-content" for="content">Content:</label>
    <textarea
      class="input-content text-content text-soft-white"
      id="content"
      name="content"
      rows="20"
      cols="40"
      placeholder="Enter your content here..."
      required
    ></textarea>
  </div>

  <div class="input-button-container">
    <div class="cancel">
      <a href="/"
        ><button class="background-grey text-button cancel" type="button">
          Cancel
        </button></a
      >
    </div>

    <div class="submit">
      <button class="submit background-blue text-button" type="submit">Add new blog</button>
    </div>
  </div>
</form>
